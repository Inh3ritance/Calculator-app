        <Button x:Name="ButtonSub" Content="-" HorizontalAlignment="Left" Margin="265,148,0,0" VerticalAlignment="Top" Width="80" Height="60" Click="ButtonSub_Click" Grid.Row="1"/>
        <Button x:Name="ButtonDiv" Content="/" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="265,83,0,0" Width="80" Height="60" Click="ButtonDiv_Click" RenderTransformOrigin="0.542,-1.472" Grid.Row="1"/>
