        <Button x:Name="Button0" Content="0" HorizontalAlignment="Left" Margin="95,280,0,0" VerticalAlignment="Top" Width="80" Height="60" Click="Button0_Click" Grid.Row="1"/>
        <Button x:Name="ButtonNeg" Content="+/-" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Width="80" Height="60" Click="ButtonNeg_Click" RenderTransformOrigin="0.45,1.425" Grid.Row="1"/>
        <Button x:Name="ButtonDec" Content="." HorizontalAlignment="Left" Margin="180,280,0,0" VerticalAlignment="Top" Width="80" Height="60" Click="ButtonDec_Click" Grid.Row="1"/>
